<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="500.0" prefWidth="500.0"
      xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="controllers.UserScreenController">
    <VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0">

        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT" prefWidth="230">
                <Label fx:id="greetingLabel" text="GreetingLabel"/>
            </VBox>
            <HBox alignment="CENTER_RIGHT" prefWidth="230">
                <Button onAction="#onButtonMyOrdersClick" prefWidth="140" text="My Orders"/>
            </HBox>
        </HBox>

        <HBox alignment="CENTER" prefHeight="25"/>

        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT" prefWidth="230">
                <Label alignment="CENTER" prefWidth="230" text="Shop">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Label>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefWidth="250">
                <Label alignment="CENTER" prefWidth="230" text="Cart">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Label>
            </VBox>
        </HBox>

        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT" prefWidth="230">
                <TableView fx:id="shopStorageTable" prefHeight="230.0" prefWidth="230.0">
                    <columns>
                        <TableColumn fx:id="columnBrand" text="Brand"/>
                        <TableColumn fx:id="columnModel" text="Model"/>
                        <TableColumn fx:id="columnType" text="Type"/>
                        <TableColumn fx:id="columnPrice" text="Price"/>
                        <TableColumn fx:id="columnAmount" text="Amount"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefWidth="230">
                <TableView fx:id="userCartTable" prefHeight="230.0" prefWidth="230.0">
                    <columns>
                        <TableColumn fx:id="columnCartBrand" text="Brand"/>
                        <TableColumn fx:id="columnCartModel" text="Model"/>
                        <TableColumn fx:id="columnCartType" text="Type"/>
                        <TableColumn fx:id="columnCartPrice" text="Price"/>
                        <TableColumn fx:id="columnCartAmount" text="Amount"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </HBox>


        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT" prefWidth="230">
                <HBox alignment="CENTER" prefWidth="230">
                </HBox>
            </VBox>
            <VBox alignment="CENTER" prefWidth="230">
                <HBox alignment="CENTER" prefWidth="230">
                    <Label fx:id="labelCost" alignment="CENTER" prefWidth="230" text="Cart Cost">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                </HBox>
            </VBox>
        </HBox>


        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT" prefWidth="230">
                <HBox alignment="CENTER" prefWidth="230">
                    <Button onAction="#onButtonAddToCartClick" prefWidth="115" text="Add to cart"/>
                </HBox>
            </VBox>
            <HBox alignment="CENTER_RIGHT" prefWidth="230">
                <HBox alignment="CENTER" prefWidth="230">
                    <Button onAction="#onButtonRemoveOneClick" prefWidth="100" text="Remove one"/>
                    <Button onAction="#onButtonOrderClick" prefWidth="100" text="Order"/>
                </HBox>
            </HBox>
        </HBox>

        <HBox alignment="CENTER" prefHeight="25"/>

        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT" prefWidth="230"/>
            <VBox alignment="CENTER_RIGHT" prefWidth="230">
                <HBox alignment="CENTER_RIGHT" prefWidth="230">
                    <Button onAction="#onButtonLogOutClick" prefWidth="100" text="Log out"/>
                </HBox>
            </VBox>
        </HBox>

    </VBox>
</HBox>
